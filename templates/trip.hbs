<h3>{{name}}</h3>
<button class="btn our-btn" {{action "editIndividualList"}}>Edit Individual Camping List</button>
{{#if individualList}}
  <h4>Select Individual Gear</h4>
  <ul>
    {{#each item in individualListItems itemController="individualListItem"}}
      <li>
        {{input type="checkbox" checked=item.updateNeedStatus}}
        {{item.name}}
    </li>
    {{/each}}
  </ul>
  <form class="form-inline">
    {{input type="text" class="form-control" value=itemName placeholder="Other Items"}}
    <button type="submit" class="btn btn-sml" {{action "addItem" "individualListItem"}}>Add</button>
  </form>

{{/if}}




<button class="btn our-btn" {{action "startList"}}>Edit Group Camping List</button>
<br>
{{#if list}}
 <h4>Select Group Gear</h4>
<ul>
  {{#each groupItem in campingListItems itemController="campingListItem"}}
    <li>
      {{input type="checkbox" checked=groupItem.updateNeedStatus}}
      {{groupItem.name}}
  </li>
  {{/each}}
</ul>
<form class="form-inline">
  {{input type="text" class="form-control" value=itemName placeholder="Other Items"}}
  <button type="submit" class="btn btn-sml" {{action "addItem" 'campingListItem'}}>Add</button>
</form>
<br>
{{else}}
  {{#each item in campingListItems}}
    {{#if item.need}}
    <ul>
      <li>{{item.name}}</li>
    </ul>
    {{/if}}
  {{/each}}
{{/if}}

<button type="submit" class="btn our-btn" {{action "addCampItems"}}>View Your List</button>
